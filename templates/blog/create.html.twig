{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_5_layout.html.twig' %}

{% block body %}

    <section>
        <div class="container">
            <div class="padding-fixed-navbar-200">
                <h1>Cr√©ation d'un article</h1>

                {{ form_start(formArticle) }}

                {{ form_row(formArticle.title, {'attr': {'placeholder' : "Titre de l'article"}}) }}
                {{ form_row(formArticle.content, {'attr': {'placeholder' : "Contenu de l'article"}}) }}
                {{ form_row(formArticle.image, {'attr': {'placeholder' : "Image de l'article"}}) }}

                <button type="submit" class="btn btn-success">
                    {% if editMode %}
                        Modifier l'article
                    {% else %}
                        Ajouter l'article
                    {% endif %}
                </button>

                {{ form_end(formArticle) }}
            </div>
        </div>
    </section>

{% endblock %}