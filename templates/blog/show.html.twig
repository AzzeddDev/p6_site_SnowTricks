{% extends 'base.html.twig' %}

{% block body %}

    <article class="container-fluid m-0 p-0">
        <div class="bg-trick"></div>
        <div class="container">
            <div class="d-flex justify-content-center padding-fixed-navbar-200">
                <div class="bg-trick-content col-12">
                    
                    <div class="img-title-box">
                        <h2>{{ article.title }}</h2>
                    </div>
                    
                    <div class="pad-content">

                        <div class="row mb-3">
                            <div class="col-2">
                                <img class="img-fluid mb-2" src="{{ article.image }}" alt="">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a type="button" class="btn btn-modify" href="#"><i class="fa-solid fa-pen"></i></a>
                                    <a type="button" class="btn btn-delete" href="#"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </div>
                            <div class="col-2">
                                <img class="img-fluid mb-2" src="{{ article.image }}" alt="">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a type="button" class="btn btn-modify" href="#"><i class="fa-solid fa-pen"></i></a>
                                    <a type="button" class="btn btn-delete" href="#"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </div>
                            <div class="col-2">
                                <img class="img-fluid mb-2" src="{{ article.image }}" alt="">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a type="button" class="btn btn-modify" href="#"><i class="fa-solid fa-pen"></i></a>
                                    <a type="button" class="btn btn-delete" href="#"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </div>
                            <div class="col-2">
                                <img class="img-fluid mb-2" src="{{ article.image }}" alt="">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a type="button" class="btn btn-modify" href="#"><i class="fa-solid fa-pen"></i></a>
                                    <a type="button" class="btn btn-delete" href="#"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </div>
                            <div class="col-2">
                                <img class="img-fluid mb-2" src="{{ article.image }}" alt="">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a type="button" class="btn btn-modify" href="#"><i class="fa-solid fa-pen"></i></a>
                                    <a type="button" class="btn btn-delete" href="#"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </div>
                            <div class="col-2">
                                <img class="img-fluid mb-2" src="{{ article.image }}" alt="">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a type="button" class="btn btn-modify" href="#"><i class="fa-solid fa-pen"></i></a>
                                    <a type="button" class="btn btn-delete" href="#"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center py-5 pb-3">
                            <div class="col-md-10">
                                <div class="metadata mb-3">Ecrit le {{ article.createdAt | date ('d/m/y') }} à {{ article.createdAt | date ('H:i') }} dans la catégorie <span class="category">{{ article.category.title }}</span></div>
                                <div class="content">
                                    <p>{{ article.content | raw }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center" id="commentaires">
                            <div class="col-md-10">
                                {% for comment in article.comments %}
                                    <div class="d-flex gap-3">
                                        <div class="user-picture"></div>
                                        <div class="comment w-100">
                                            <div class="author">
                                                {{ comment.author }}
                                            </div>

                                            <div class="col">
                                                <div class="content-comment">
                                                    {{ comment.content }}
                                                </div>

                                                <div class="date-comment">
                                                    {{ comment.createdAt | date ('d/m/Y à H:i') }}
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </article>

{% endblock %}