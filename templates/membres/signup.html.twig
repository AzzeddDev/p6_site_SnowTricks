{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">
            <div class="padding-fixed-navbar-200">

                <div class="d-flex justify-content-center">
                    <div class="col-md-4">

                        <h1 class="text-center">Signup</h1>

                        {{ form_start(form) }}

                        {{ form_row(form.name, {'label':'Nom d\'utilisateur','attr': {'placeholder':'Nom d\'utilisateur'}}) }}
                        {{ form_row(form.email, {'label':'Email','attr': {'placeholder':'votre email'}}) }}
                        {{ form_row(form.motdepasse, {'type':'password','label':'Mot de passe','attr': {'placeholder':'Votre mot de passe'}}) }}

                        <button type="submit" class="btn btn-success">Inscription</button>
                        {{ form_end(form) }}

                    </div>
                </div>

            </div>
        </div>
    </section>

{% endblock %}